    builtin_frameworks = [],
    builtin_include_directories = [
        "{}/usr/include/c++/v1".format(SDK_X86_64_APPLE_DARWIN),
        "{}/lib/clang/{}/include".format(CLANG_LIB, CLANG_LIB_VERSION),
        "{}/usr/include".format(SDK_X86_64_APPLE_DARWIN),
    ],
    builtin_libraries = [],
    builtin_library_directories = [
        "{}/usr/lib".format(SDK_X86_64_APPLE_DARWIN),
    ],
    clang = CLANG,
    compile_flags = [
        "-fno-exceptions",
        "-Werror",
        "-Wall",
        "-Wthread-safety",
        "-Wself-assign",
    ],
    dbg_compile_flags = [
        "-g",
        "-fstandalone-debug",
    ],
    dbg_link_flags = [],
    fastbuild_compile_flags = [],
    fastbuild_link_flags = [],
    link_flags = [
        "-fatal_warnings",
