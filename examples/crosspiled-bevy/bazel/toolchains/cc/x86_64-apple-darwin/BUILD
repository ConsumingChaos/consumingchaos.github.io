        "x86_64",
        "-macos_version_min",
        "13.0.0",
        "-platform_version",
        "macos",
        "13.0.0",
        "13.1",
        "-headerpad_max_install_names",
        "-undefined",
        "dynamic_lookup",
    ],
    opt_compile_flags = [
        "-g0",
        "-O2",
        "-D_FORTIFY_SOURCE=1",
        "-DNDEBUG",
        "-ffunction-sections",
        "-fdata-sections",
    ],
    opt_link_flags = [
        "--gc-sections",
    ],
    target = "x86_64-apple-darwin",
)

cc_toolchain(
    name = "cc_toolchain",
    all_files = "@nix_config//:config.bzl",
    ar_files = "@nix_config//:config.bzl",
    as_files = "@nix_config//:config.bzl",
